doctype html
html
  head
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='//code.jquery.com/jquery-1.11.0.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/index.js')
    title Chatty Room
  body
    h1#welcome Welcome to the Chat Room: chat it up!
    div#top-cont
       div.inlineBlock#name-and-text-cont
        span Your name:  
          input(type="text", value="Anonymous")#name
        br
        form#messageForm
          textarea(rows="4", cols="50", placeholder="Share something!", maxlength=200)#outgoingMessage
          input(type="button", value="Share", disabled=true)#send.btn-primary
      div.inlineBlock.topAligned#part-containter
        b Participants
        br
        div#participants
    h1#board The Board
    div#messages
